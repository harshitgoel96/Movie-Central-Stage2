<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="@string/noInternet"
        android:textSize="@dimen/reg_text"
        android:padding="@dimen/smallPad"
        android:gravity="center_horizontal"
        android:id="@+id/connectivityPopup"
        />
    <GridView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:numColumns="@integer/grid_col_num"
        android:verticalSpacing="@dimen/zero"
        android:horizontalSpacing="@dimen/zero"

        android:id="@+id/grid_keeper"
        ></GridView>
</FrameLayout>
